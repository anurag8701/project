#include<stdio.h>
#include<conio.h>
#include<string.h>
#include<stdlib.h>
int psize;
int base;
void pass1();
void pass2();
void main()
{
    pass1();
    pass2();
}
void pass1()
{
    FILE *f1,*f2,*f3,*f4,*f5;
    char name[10],mneu[10],operand[10],label[10],search[10],b[10];
    int addr,start,locctr,found=0,found1=0,number,length,opcode,size,bf=0;
    f1=fopen("input.txt","r");
    f2=fopen("symtab.txt","w");
    f3=fopen("inter.txt","w");
    fclose(f2);
    fscanf(f1,"%s %s %x",name,mneu,&addr);
    if(strcmp(mneu,"START")==0)
    {
        start=addr;
        locctr=start;
         if(locctr<16)
        {
        fprintf(f3,"%s %s 00000%x\n",name,mneu,locctr);
        }
        else if(locctr<256)
        {
        fprintf(f3,"%s %s 0000%x\n",name,mneu,locctr);
        }
         else if(locctr<4096)
        {
        fprintf(f3,"%s %s 000%x\n",name,mneu,locctr);
        }
        else if(locctr<65536)
        {
            fprintf(f3,"%s %s 00%x\n",name,mneu,locctr);

        }
        else if(locctr<1048576)
        {
           fprintf(f3,"%s %s 0%x\n",name,mneu,locctr);
        }
        else
        {
            fprintf(f3,"%s %s %x\n",name,mneu,locctr);

        }
        fscanf(f1,"%s %s %s",label,mneu,operand);
    }
    else
        locctr=0;
     while(strcmp(mneu,"END")!=0)
    {   if(locctr<16)
        {
        fprintf(f3,"00000%x %s %s %s\n",locctr,label,mneu,operand);
        }
        else if(locctr<256)
        {
        fprintf(f3,"0000%x %s %s %s\n",locctr,label,mneu,operand);
        }
         else if(locctr<4096)
        {
        fprintf(f3,"000%x %s %s %s\n",locctr,label,mneu,operand);
        }
        else if(locctr<65536)
        {
            fprintf(f3,"00%x %s %s %s\n",locctr,label,mneu,operand);

        }
        else if(locctr<1048576)
        {
            fprintf(f3,"0%x %s %s %s\n",locctr,label,mneu,operand);

        }
        else
        {
            fprintf(f3,"%x %s %s %s\n",locctr,label,mneu,operand);

        }
        if(strcmp(label,"-")!=0)
        {   f5=fopen("symtab.txt","r");
            found=0;
            while(!feof(f5))//searching symtab
            {
            fscanf(f5,"%s",search);
            if(strcmp(search,label)==0)
                {   found=1;
                    break;
                }
            }
            fclose(f5);
            if(found==1)
            {
                printf("wrong input\n");
                exit(0);
            }
            else
            {
                f2=fopen("symtab.txt","a");
                fprintf(f2,"%s %x\n",label,locctr);//symtab
                fclose(f2);
            }

        }
        f4=fopen("optab.txt","r");
        found1=0;
        while(!feof(f4))
            {
            fscanf(f4,"%s %x %x",search,&size,&opcode);
            if(strcmp(search,mneu)==0)
                {   found1=1;
                    break;
                }
            }
            fclose(f4);
            if(found1==1)
            {
                locctr=locctr+size;
            }
            else if(strcmp(mneu,"RESW")==0)
            {   sscanf(operand,"%d",&number);
                locctr=locctr+(3*number);
            }
             else if(strcmp(mneu,"RESB")==0)
            {   sscanf(operand,"%d",&number);
                locctr=locctr+number;
            }
            else if(strcmp(mneu,"BYTE")==0)
            {
                 if(operand[0]=='X')
                 {
                     length=strlen(operand)-3;
                     number=length/2;
                     locctr=locctr+number;
                 }
                 else
                 {
                     length=strlen(operand)-3;
                     locctr=locctr+length;

                 }
            }
            else if(strcmp(mneu,"WORD")==0)
                locctr=locctr+3;
            else if(strcmp(mneu,"RSUB")==0)
                locctr+=3;
            else if(strcmp(mneu,"+RSUB")==0)
                locctr+=4;
            else if(strcmp(mneu,"BASE")==0)
                {
                    locctr+=0;
                    strcpy(b,operand);
                    bf=1;
                }
            else
            {
                printf("ERROR EXIT\n");
                exit(0);
            }
            fscanf(f1,"%s %s %s",label,mneu,operand);
    }
    psize=(locctr-start);
     if(locctr<16)
        {
        fprintf(f3,"00000%x %s %s %s\n",locctr,label,mneu,operand);
        }
        else if(locctr<256)
        {
        fprintf(f3,"0000%x %s %s %s\n",locctr,label,mneu,operand);
        }
         else if(locctr<4096)
        {
        fprintf(f3,"000%x %s %s %s\n",locctr,label,mneu,operand);
        }
        else if(locctr<65536)
        {
            fprintf(f3,"00%x %s %s %s\n",locctr,label,mneu,operand);

        }
         else if(locctr<1048576)
        {
            fprintf(f3,"0%x %s %s %s\n",locctr,label,mneu,operand);

        }
         else
        {
            fprintf(f3,"%x %s %s %s\n",locctr,label,mneu,operand);

        }
    fclose(f1);
    fclose(f2);
    fclose(f3);
    fclose(f4);
    fclose(f5);
    if(bf==1)
    {
        f5=fopen("symtab.txt","r");
        found=0;
        while(!feof(f5))
        {
        fscanf(f5,"%s",search);
        if(strcmp(search,b)==0)
        {   found=1;
            fscanf(f5,"%x",&base);
            break;
        }
        }
        fclose(f5);
        if(found!=1)
        {
            printf("BASE ERROR");
            exit(0);
        }
    }

}
void pass2()
{
    int r1,r2,nowsize=0,maxsize=30,sz,nscopy=0,len,sum=0,nibp[4],found=0,disp,ta,i,w,flag=0,loc,modi,counting=0,prevflag=0,t=0,r=0;
    char nm[10],extra[10],format3[10],x,y,copy[10],search[10],name[10],mneu[10],label[10],opr[10],symbol[10],temp[20],temp1[10],cat[10],opcode[10],format4[10],locctr[10],start[10],addr[10],zz[10];
    FILE *f1,*f2,*f3,*f4,*f5,*f6,*f7,*f8;
    f1=fopen("inter.txt","r");
    f4=fopen("output.txt","w");
    f5=fopen("objectfile.txt","w");
    f6=fopen("relocate.txt","w");
    fscanf(f1,"%s %s %s",name,mneu,start);
    if(strcmp(mneu,"START")==0)
    {
        fprintf(f4,"%s\t%s\t%s\n",name,mneu,start);
        fscanf(f1,"%s %s %s %s",locctr,label,mneu,opr);
    }
    else
    {
        printf("error1\n");
        exit(0);
    }
    strncpy(nm,name,5);
    fprintf(f5,"H ^ %s ^ %s ^ %x\n",nm,start,psize);//psize
    fprintf(f5,"T ^ %s ^ ",locctr);
    f7=fopen("listing.txt","w");
   while(strcmp(mneu,"END")!=0)
    {   sscanf(locctr,"%x",&loc);
        sz=0;
        found=0;
        sum=0;
        disp=0;
        counting=0;
        f2=fopen("optab.txt","r");
        while(!feof(f2))
            {
            fscanf(f2,"%s %x %s",search,&sz,opcode);
            if(strcmp(search,mneu)==0)
                {   found=1;
                    break;
                }
            }
            fclose(f2);
            if(found==1)
            {   flag=0;
                if(sz==2)
                {
                    if(strlen(opr)==3)
                    {
                        x=opr[0];
                        switch(x)
                        {
                            case 'A' : r1=0;
                            break;
                            case 'X' : r1=1;
                            break;
                            case 'L' : r1=2;
                            break;
                            case 'B' : r1=3;
                            break;
                            case 'S' : r1=4;
                            break;
                            case 'T' : r1=5;
                            break;
                            case 'F' : r1=6;
                            break;
                            default :
                                printf("no such register exsist \n");
                                exit(0);
                                break;
                        }
                        y=opr[2];
                        switch(y)
                        {    case 'A' : r2=0;
                            break;
                            case 'X' : r2=1;
                            break;
                            case 'L' : r2=2;
                            break;
                            case 'B' : r2=3;
                            break;
                            case 'S' : r2=4;
                            break;
                            case 'T' : r2=5;
                            break;
                            case 'F' : r2=6;
                            break;
                            default :
                                printf("no such register exsist \n");
                                exit(0);
                                break;
                        }
                        sprintf(extra,"%s%x%x",opcode,r1,r2);
                    }
                    else
                    {
                        r2=0;
                        x=opr[0];
                        switch(x)
                        {
                            case 'A' : r1=0;
                            break;
                            case 'X' : r1=1;
                            break;
                            case 'L' : r1=2;
                            break;
                            case 'B' : r1=3;
                            break;
                            case 'S' : r1=4;
                            break;
                            case 'T' : r1=5;
                            break;
                            case 'F' : r1=6;
                            break;
                            default :
                                printf("no such register exsist \n");
                                exit(0);
                                break;
                        }
                        sprintf(extra,"%s%x%x",opcode,r1,r2);
                    }
                    nscopy=nowsize;
                    nowsize=nowsize+2;
                }//format2
                else if(sz==3)
                {
                    if(opr[0]=='#')
                    {
                        nibp[0]=0;
                        nibp[1]=4;
                        nibp[2]=0;
                        nibp[3]=0;
                    }
                    else if(opr[0]=='@')
                    {
                        nibp[0]=8;
                        nibp[1]=0;
                    }
                    else
                    {
                        nibp[0]=8;
                        nibp[1]=4;
                    }
                    if(opr[0]=='#')
                    {
                       len=strlen(opr)-1;
                       strncpy(format3,opr+1,len);
                       f3=fopen("symtab.txt","r");
                       found=0;
                       while(!feof(f3))
                       {
                           fscanf(f3,"%s",symbol);
                           if(strcmp(format3,symbol)==0)
                           {
                               fscanf(f3,"%x",&disp);
                               found=1;
                               break;
                           }
                       }
                       fclose(f3);
                       if(found!=1)
                       {
                           sscanf(format3,"%d",&disp);
                       }
                    }
                    else
                    {     if(opr[0]=='@')
                            {
                                len=strlen(opr)-1;
                                strncpy(format3,opr+1,len);
                            }
                            else
                            {
                                strcpy(format3,opr);
                            }
                        f3=fopen("symtab.txt","r");
                       found=0;
                       while(!feof(f3))
                       {
                           fscanf(f3,"%s",symbol);
                           if(strcmp(format3,symbol)==0)
                           {
                               fscanf(f3,"%x",&ta);
                               found=1;
                               break;
                           }
                       }
                       fclose(f3);
                       disp=ta-(loc+3);
                       if(disp<=2047&&disp>=-2048)
                       {
                           nibp[2]=0;
                           nibp[3]=1;
                           if(disp<0)
                           {
                               sprintf(temp,"%x",disp);
                               strncpy(temp1,temp+5,3);
                               sscanf(temp1,"%x",&disp);
                           }
                       }
                       else
                       {
                           nibp[2]=2;
                           nibp[3]=0;
                           disp=ta-base;
                           if(disp<0&&disp>4095)
                           {
                               printf("wrong format3");
                               exit(0);
                           }
                       }

                    }
                        for(i=0;i<=3;i++)
                        sum=sum+nibp[i];
                        if(disp<16)
                        {
                        sprintf(extra,"%s%x00%x",opcode,sum,disp);
                        }
                        else if(disp<256)
                        {
                        sprintf(extra,"%s%x0%x",opcode,sum,disp);
                        }
                        else
                        {
                        sprintf(extra,"%s%x%x",opcode,sum,disp);

                        }

                    nscopy=nowsize;
                    nowsize=nowsize+3;
                }//f3 end
                else if(sz==4)
                {

                    sum=0;
                    if(opr[0]=='#')
                    {
                        nibp[0]=0;
                        nibp[1]=4;
                        nibp[2]=0;
                        nibp[3]=0;
                    }
                    else if(opr[0]=='@')
                    {
                        nibp[0]=8;
                        nibp[1]=0;
                        nibp[2]=0;
                        nibp[3]=0;
                    }
                    else
                    {
                        nibp[0]=8;
                        nibp[1]=4;
                        nibp[2]=0;
                        nibp[3]=0;
                    }
                    for(i=0;i<=3;i++)
                        sum=sum+nibp[i];
                    if(opr[0]=='#')
                    {
                       len=strlen(opr)-1;
                       strncpy(format4,opr+1,len);
                       f3=fopen("symtab.txt","r");
                       found=0;
                       while(!feof(f3))
                       {
                           fscanf(f3,"%s",symbol);
                           if(strcmp(format4,symbol)==0)
                           {
                               fscanf(f3,"%x",&ta);
                               found=1;
                               break;
                           }
                       }
                       fclose(f3);
                       if(found!=1)
                       {
                           sscanf(format4,"%d",&ta);
                       }
                    }
                    else
                    {
                           if(opr[0]=='@')
                            {
                                len=strlen(opr)-1;
                                strncpy(format4,opr+1,len);
                            }
                            else
                            {
                                strcpy(format4,opr);
                            }
                        f3=fopen("symtab.txt","r");
                       found=0;
                       while(!feof(f3))
                       {
                           fscanf(f3,"%s",symbol);
                           if(strcmp(format4,symbol)==0)
                           {
                               fscanf(f3,"%x",&ta);
                               found=1;
                               break;
                           }
                       }
                       fclose(f3);

                    }
                        if(ta<16)
                        {
                        sprintf(extra,"%s%x0000%x",opcode,sum,ta);
                        }
                        else if(ta<256)
                        {
                        sprintf(extra,"%s%x000%x",opcode,sum,ta);
                        }
                        else if(ta<4096)
                        {
                        sprintf(extra,"%s%x00%x",opcode,sum,ta);
                        }
                        else if(ta<65536)
                        {
                        sprintf(extra,"%s%x0%x",opcode,sum,ta);
                        }
                        else
                        {
                        sprintf(extra,"%s%x%x",opcode,sum,ta);
                        }
                    nscopy=nowsize;
                    nowsize=nowsize+4;
                    if(opr[0]!='#')
                    {   modi=loc+1;
                        if(modi<16)
                        {
                            sprintf(addr,"00000%x",modi);
                        }
                        else if(modi<256)
                        {
                            sprintf(addr,"0000%x",modi);
                        }
                        else if(modi<4096)
                        {
                            sprintf(addr,"000%x",modi);
                        }
                        else if(modi<65536)
                        {
                            sprintf(addr,"00%x",modi);
                        }
                        else if(modi<1048576)
                        {
                            sprintf(addr,"0%x",modi);
                        }
                        else
                        {
                            sprintf(addr,"%x",modi);
                        }

                        fprintf(f6,"M ^ %s ^ 05+%s\n",addr,name);
                    }
                }//format=4
            }//found=1
            else if(strcmp(mneu,"RSUB")==0)
            {   flag=0;
            strcpy(extra,"4F0000");
            nscopy=nowsize;
            nowsize=nowsize+3;
            }
             else if(strcmp(mneu,"+RSUB")==0)
            {   flag=0;
            strcpy(extra,"4F000000");
            nscopy=nowsize;
            nowsize=nowsize+4;
            }
            else if(strcmp(mneu,"WORD")==0)
            {   flag=0;
                sscanf(opr,"%d",&w);
                if(w<16)
                {
                    sprintf(extra,"00000%x",w);
                }
                else if(w<256)
                {
                    sprintf(extra,"0000%x",w);
                }
                else if(w<4096)
                {
                    sprintf(extra,"000%x",w);
                }
                else if(w<65536)
                {
                    sprintf(extra,"00%x",w);
                }
                else if(w<1048576)
                {
                    sprintf(extra,"0%x",w);
                }
                else
                {
                    sprintf(extra,"%x",w);
                }
                nscopy=nowsize;
                nowsize=nowsize+3;
            }
            else if(strcmp(mneu,"BYTE")==0)
            {   flag=0;
                strcpy(extra,"    ");
                if(opr[0]=='X')
                { len=strlen(opr)-3;
                 strncpy(extra,opr+2,len);
                 nscopy=nowsize;
                nowsize=nowsize+(len/2);
                }
                else
                {   strcpy(extra,"");
                    len=strlen(opr)-3;
                 strncpy(zz,opr+2,len);
                 for(i=0;i<len;i++)
                 {
                     sprintf(cat,"%x",zz[i]);
                     strcat(extra,cat);
                 }
                 nscopy=nowsize;
                nowsize=nowsize+len;

                }
            }
            else if(strcmp(mneu,"RESB")==0||strcmp(mneu,"RESW")==0)
            {
                flag=1;
                strcpy(extra,"-");
            }
            else
            {
                printf("error");
                exit(0);
            }
            if(flag==1)
            {
            if(prevflag!=1)
            {
            fclose(f7);
            if(nowsize<16)
            fprintf(f5,"0%x ",nowsize);
            else
            fprintf(f5,"%x ",nowsize);
            f8=fopen("listing.txt","r");
            while(!feof(f8))
            { counting++;
            fscanf(f8,"%s",copy);
            }
            fclose(f8);
            f8=fopen("listing.txt","r");
            i=1;
            while(i<counting)
            { i++;
            fscanf(f8,"%s",copy);
            fprintf(f5,"^ %s ",copy);
            }
            f7=fopen("listing.txt","w");
            nowsize=0;
            nscopy=0;
            }
            }
            else
            {
                if(nowsize<=maxsize)
                {
                    fprintf(f7,"%s\n",extra);
                    if(prevflag==1)
                        fprintf(f5,"\nT ^ %s ^ ",locctr);
                    if(t==1)
                    {
                        fprintf(f5,"\nT ^ %s ^ ",locctr);
                        t=0;
                    }
                }
                else
                {
                    fclose(f7);
                    if(nscopy<16)
                        fprintf(f5,"0%x ",nscopy);
                    else
                        fprintf(f5,"%x ",nscopy);
                    f8=fopen("listing.txt","r");
                    while(!feof(f8))
                    { counting++;
                    fscanf(f8,"%s",copy);
                    }
                    fclose(f8);
                    f8=fopen("listing.txt","r");
                    i=1;
                    while(i<counting)
                    { i++;
                    fscanf(f8,"%s",copy);
                    fprintf(f5,"^ %s ",copy);
                    }
                    f7=fopen("listing.txt","w");
                    fprintf(f7,"%s\n",extra);
                    nowsize=nowsize-nscopy;
                    nscopy=0;
                    t=1;

                }
            }
            fprintf(f4,"%s\t%s\t%s\t%s\t%s\n",locctr,label,mneu,opr,extra);
            fscanf(f1,"%s %s %s %s",locctr,label,mneu,opr);
            prevflag=flag;


        }//while end
        fprintf(f4,"%s\t%s\t%s\t%s\t%s\n","-",label,mneu,opr,"-");
        fclose(f7);
        fclose(f1);
        fclose(f2);
        fclose(f3);
        fclose(f4);
        fclose(f6);
        if(nowsize!=0)
        {
            counting=0;
        if(nowsize<16)
        fprintf(f5,"0%x ",nowsize);
        else
        fprintf(f5,"%x ",nowsize);
        f8=fopen("listing.txt","r");
        while(!feof(f8))
        { counting++;
        fscanf(f8,"%s",copy);
        }
        fclose(f8);
        f8=fopen("listing.txt","r");
        i=1;
        while(i<counting)
        { i++;
        fscanf(f8,"%s",copy);
        fprintf(f5,"^ %s ",copy);
        }
        fclose(f8);
        }
        if(r==1)
        {
             f1=fopen("relocate.txt","r");
        while(!feof(f1))
        {
            fscanf(f1,"%s %s %s %s %s",temp,temp1,format3,format4,search);
            fprintf(f5,"\n%s %s %s %s %s",temp,temp1,format3,format4,search);

        }
        fclose(f1);
        }
        fprintf(f5,"\nE ^ %s \n",start);
        fclose(f5);

}
